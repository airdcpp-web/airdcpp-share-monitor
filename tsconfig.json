{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "ESNext",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "moduleResolution": "bundler",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "coverage",
    "devtools",
    "dist",
    "node_modules",
  ]
}
